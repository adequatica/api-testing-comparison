{
  "name": "api-testing-comparison",
  "version": "1.0.0",
  "description": "API Testing Comparison: Cypress vs. Playwright vs. Jest",
  "keywords": [
    "api",
    "testing",
    "cypress",
    "playwright",
    "jest"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/adequatica/api-testing-comparison"
  },
  "author": "Andrey Enin <enotramone@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0"
  },
  "dependencies": {
    "@playwright/test": "1.39.0",
    "axios": "1.6.2",
    "cypress": "12.15.0",
    "jest": "29.7.0"
  },
  "devDependencies": {
    "@types/chai": "4.3.5",
    "@types/jest": "29.5.10",
    "@types/node-fetch": "2.6.4",
    "@typescript-eslint/eslint-plugin": "6.12.0",
    "@typescript-eslint/parser": "6.12.0",
    "date-fns": "2.30.0",
    "eslint": "8.54.0",
    "prettier": "3.1.0",
    "ts-jest": "29.1.1",
    "typescript": "4.9.5"
  },
  "scripts": {
    "cypress:open": "./node_modules/.bin/cypress open",
    "cypress:run": "./node_modules/.bin/cypress run",
    "format": "npx prettier --write .",
    "lint": "eslint '**/*.{js,ts}'",
    "lint:fix": "eslint --fix '**/*.{js,ts}'",
    "test:jest": "jest --runInBand --config jest.config.json",
    "test:playwright": "playwright test --config playwright.config.ts",
    "test": "npm run test:jest && npm run test:playwright && npm run cypress:run"
  }
}
